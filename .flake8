[flake8]
# Base flake8 configuration
max-line-length = 100
exclude = .git,__pycache__,build,dist,.venv
# Import ordering configuration - PEP8 compatible with Black
import-order-style = pep8
application-import-names = core_data_processing
application-package-names = core_data_processing
# Enable flake8-import-order plugin
# I0: Import Order
# I1: Import Missing
# I2: Unrelatived Import
select = C,E,F,W,B,B950,I
ignore = E203, E501, W503, I202
per-file-ignores =
    __init__.py:F401,F403
    tests/*:I101
